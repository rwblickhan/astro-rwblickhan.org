---
import { getCollection } from "astro:content";

import IndexStandardLayout from "../../layouts/IndexStandardLayout.astro";

const posts = (await getCollection("logs")).sort(
  (a, b) => b.data.lastUpdatedDate.valueOf() - a.data.lastUpdatedDate.valueOf()
);
---

<IndexStandardLayout
  title="Logs"
  description="Logs index page"
  posts={posts}
  makeHref={(id) => `/logs/${id}`}
>
  <p slot="header">
    Logs marked ❤️ were on my favorite-of-the-year list for that year; logs
    marked 🔁 were a repeat read/view/listen.
  </p>
</IndexStandardLayout>
