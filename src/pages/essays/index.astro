---
import { getCollection } from "astro:content";

import IndexStandardLayout from "../../layouts/IndexStandardLayout.astro";

const posts = (await getCollection("essays")).sort(
  (a, b) => b.data.lastUpdatedDate.valueOf() - a.data.lastUpdatedDate.valueOf()
);
---

<IndexStandardLayout
  title="Essays"
  description="Essays index page"
  posts={posts}
  makeHref={(slug) => `/essays/${slug}`}
/>
