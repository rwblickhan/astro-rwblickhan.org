---
import { getCollection } from "astro:content";

import IndexStandardLayout from "../../layouts/IndexStandardLayout.astro";

const posts = (await getCollection("fiction")).sort(
  (a, b) => b.data.lastUpdatedDate.valueOf() - a.data.lastUpdatedDate.valueOf()
);
---

<IndexStandardLayout
  title="Fiction"
  description="Fiction index page"
  posts={posts}
  makeHref={(slug) => `/fiction/${slug}`}
/>
