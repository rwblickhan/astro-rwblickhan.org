---
import { getCollection } from "astro:content";

import IndexStandardLayout from "../../layouts/IndexStandardLayout.astro";

const posts = (await getCollection("technical")).sort(
  (a, b) => b.data.lastUpdatedDate.valueOf() - a.data.lastUpdatedDate.valueOf()
);
---

<IndexStandardLayout
  title="Technical"
  description="Technical writing index page"
  posts={posts}
  makeHref={(slug) => `/technical/${slug}`}
/>
