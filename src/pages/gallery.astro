---
import { Image } from "@astrojs/image/components";
import GalleryLayout from "../layouts/GalleryLayout.astro";

const {
  title = "Gallery",
  description = "Photography gallery from R. W. Blickhan",
} = Astro.props;

interface GalleryImage {
  id: string;
  alt: string;
}

const galleryImages: GalleryImage[] = [
