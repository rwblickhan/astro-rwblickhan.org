---
import { Image } from "@astrojs/image/components";
import GalleryLayout from "../layouts/GalleryLayout.astro";

const {
  title = "Gallery",
  description = "Photography gallery from R. W. Blickhan",
} = Astro.props;

interface GalleryImage {
  id: string;
  alt: string;
}

const galleryImages: GalleryImage[] = [
  { id: "1", alt: "A view of Mission Bay during day" },
  { id: "2", alt: "A view of Mission Bay at night" },
  { id: "3", alt: "Market Street at dusk" },
  { id: "4", alt: "Rooibos enjoying a walk" },
  { id: "5", alt: "Columbus Cafe's iconic neon sign" },
  { id: "6", alt: "A cross hanging over a Korean church in Oakland" },
  { id: "7", alt: "A building along 3rd St" },
  { id: "8", alt: "A view down 18th St" },
  { id: "9", alt: "A view out an airplane window at dusk" },
  { id: "10", alt: "A dark alley in Soma" },
  { id: "11", alt: "A TTC mural in Toronto" },
  { id: "12", alt: "The sun setting over Waikiki Beach" },
  { id: "13", alt: "A Muni train waiting in the rain" },
  { id: "14", alt: "A suburban street covered by snow" },
  { id: "15", alt: "Two residential towers in Toronto disappearing into fog" },
  { id: "16", alt: "The sign for the Roxie Theater at dusk" },
  { id: "17", alt: "An alley in Soma" },
  { id: "18", alt: "Brannan Station in Rincon Hill" },
  {
    id: "19",
    alt: "Many doorways open outwards, but few doorways open inwards",
  },
  { id: "20", alt: "A view into a private yard in San Francisco" },
  {
    id: "21",
    alt: "A view of the roof of the Ferry Building along the Embarcadero in San Francisco",
