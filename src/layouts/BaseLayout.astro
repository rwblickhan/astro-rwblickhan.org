const { title, description, width, lastUpdatedDate } =
  Astro.props.frontmatter || Astro.props;
---

<!doctype html>
<html lang="en">
  <BaseHead
    title={title}
    description={description}
    lastUpdatedDate={lastUpdatedDate}
  />
  <Header />
  <article class={width}>
    <slot />
  </article>
</html>
