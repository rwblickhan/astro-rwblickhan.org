---
import BaseLayout from "./BaseLayout.astro";

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div>
    <h1>{title}</h1>
    <slot />
  </div>
</BaseLayout>

<style lang="scss">
  div {
    padding: 0 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;

    @media (min-width: 768px) {
      max-width: 64rem;
      margin-left: auto;
      margin-right: auto;
    }
  }

  a {
    margin-bottom: 0.5rem;
  }
</style>
