---
export interface Props {
  id: string;
  slug: string;
  title: string;
}

const { id, slug, title } = Astro.props;
---

<div id={id}>
  <a href={`${slug}`}>
    <h2>{title}</h2>
  </a>
</div>

<style>
  div {
    display: none;
    padding: 0 1rem;
    height: 4rem;
    background-color: black;
  }

  a {
    text-decoration: none;
    color: var(--rwb-text-dark);
  }

  a:hover {
    text-decoration: underline;
  }

  @media (min-width: 1024px) {
    div {
      padding: 0 3rem;
    }
  }
</style>
