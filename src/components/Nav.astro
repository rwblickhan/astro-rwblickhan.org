---
import SearchNavIcon from "./SearchNavIcon.astro";
import MapNavIcon from "./MapNavIcon.astro";
import SubscribeNavIcon from "./SubscribeNavIcon.astro";
import ColorPicker from "./ColorPicker.astro";
import {
  collectionWithGalleryMetadataMap,
  type CollectionMetadata,
} from "../consts";
import { collectionMetadataMap } from "../consts";

const collections: CollectionMetadata[] = [];
for (const collectionMetadata of collectionWithGalleryMetadataMap.values()) {
  if (collectionMetadata.isInHeader) {
    collections.push(collectionMetadata);
  }
}

const { parentCollection } = Astro.props;
const parentCollectionMetadata =
  parentCollection && collectionMetadataMap.get(parentCollection);
---

<nav id="header">
  <div class="title">
    {
      parentCollection && (
        <a
          href={parentCollectionMetadata.slug}
          title={`Return to ${parentCollectionMetadata.title}`}
          aria-label={`Return to ${parentCollectionMetadata.title}`}
        >
          ←
        </a>
      )
    }
    <span>λ</span>
    <a href="/index.html">rwblickhan.org</a>
  </div>
  <div class="header-icons">
    <ColorPicker />
    <SubscribeNavIcon />
    <SearchNavIcon />
    <MapNavIcon />
  </div>
</nav>

<style is:global>
  nav {
    display: flex;
    margin: 1rem 1rem 0 1rem;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 1.3rem;

    a {
      text-decoration: none;
      color: var(--rwb-text);

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .title {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
  }

  .header-icons {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }

  @media (min-width: 1024px) {
    .header-icons {
      gap: 0.75rem;
    }
  }
</style>
